{
    "name": "pentarim/sylius-affiliate-bundle",
    "type": "symfony-bundle",
    "description": "Affiliate & referral system for Sylius applications.",
    "keywords": ["shop", "ecommerce", "affiliate", "referral"],
    "homepage": "http://sylius.org",
    "license": "MIT",
    "authors": [
        {
            "name":     "Sylius project",
            "homepage": "http://sylius.org"
        },
        {
            "name":     "Community contributions",
            "homepage": "http://github.com/Sylius/Sylius/contributors"
        }
    ],
    "require": {
        "php": "^5.6|^7.0",

        "symfony/framework-bundle":        "~3.2",
        "sylius/core-bundle":              "^1.0@beta",
        "sylius/mailer-bundle":            "^1.0@beta",
        "sylius/resource-bundle":          "^1.0@beta"
    },
    "require-dev": {
        "phpspec/phpspec": "^3.2",
        "symfony/form": "~3.2"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": { "Pentarim\\SyliusAffiliateBundle\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Pentarim\\SyliusAffiliateBundle\\spec\\": "spec/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "^1.0@beta"
        }
    }
}
